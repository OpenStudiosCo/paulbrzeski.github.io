/*
  Global
*/

*
  font-family 'Merriweather', serif !important
  font-weight 300

#global-header
  .column.wide
    padding-bottom 0.5em !important

#logo
  padding 1em
  
#menu
  background none transparent
  border none
  box-shadow none
  padding-right 1em !important
  a
    letter-spacing .35em
    line-height 3em
    margin 2em 1em
    padding 0em 1em
    text-transform uppercase
    

footer
  h3
    font-weight 300
    line-height 3em
  img
    display inline-block !important
  span
    color #000000
    margin 0 .5em
