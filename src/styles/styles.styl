/*
  Global
*/
$tablet-breakpoint = 800px
$desktop-breakpoint = 1440px

*
  font-family 'Merriweather', serif !important
  font-weight 300
  letter-spacing .075rem

.fab
  font-family "Font Awesome 5 Brands" !important

.fas
  font-family "Font Awesome 5 Free" !important

strong
  font-weight bold

i.icon
  font-family 'Icons' !important

.ui.container.wide  
  width 1920px

#global-header 
  .column.wide
    padding-bottom 0.5rem !important

#logo
  padding-top 1.8rem
  padding-right 2rem
  margin-left -1.5rem

#menu
  background none transparent
  border none
  box-shadow none
  padding-right 1rem !important
  a
    letter-spacing .35rem
    line-height 3rem
    margin 2rem 1rem
    padding 0rem 1rem
    text-transform uppercase

#mobile_menu_toggle
  color #333333
  font-size 2rem
  position absolute
  right 0.75rem
  top 2.7rem
  cursor pointer

.ui.divider
  margin 2rem 0 !important

#menu[style*='display: block']
  display flex !important

footer
  max-width $desktop-breakpoint
  margin 0 auto
  padding-bottom 5rem
  h3
    font-weight bold
    line-height 3rem
  h5
      float right
  img
    display inline-block !important
    margin-left calc(50% - 8rem)
    margin-right -15rem
    &.logo
      margin .5rem 0 0
  span
    display inline-block
    color #000000
    line-height 2.5rem

.video-container 
	position relative
	padding-bottom 56.25%
	padding-top 30px
	height 0
	overflow hidden

.video-container iframe,
.video-container object,
.video-container embed
  position absolute
  top 0
  left 0
  width 100%
  height 100%
