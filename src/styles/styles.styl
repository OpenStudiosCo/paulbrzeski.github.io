/*
  Global
*/

*
  font-family 'Merriweather', serif !important
  font-weight 300

#global-header
  .column.wide
    padding-bottom 0.5em !important

// Header for all non home pages
header
  position relative
  text-align center
  img
    margin-bottom 2em
  h2
    color #FFFFFF
    font-size 36pt
    font-weight 300
    position absolute
    top calc(165px - 1em)
    left 0
    letter-spacing .2em
    right 0
    margin-left auto
    margin-right auto
    text-transform uppercase

#logo
  padding 1em
  
#menu
  border none
  box-shadow none
  padding-right 1em !important
  a
    letter-spacing .35em
    line-height 3em
    margin 2em 1em
    padding 0em 1em
    text-transform uppercase
    

footer
  h3
    font-weight 300
    line-height 3em
  img
    display inline-block !important
  span
    color #000000
    margin 0 .5em
