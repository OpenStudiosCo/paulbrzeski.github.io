/*
  Global
*/

$desktop-breakpoint = 1500px

*
  font-family 'Merriweather', serif !important
  font-weight 300
  letter-spacing .075rem
  
p
  text-align justify

i.icon
  font-family 'Icons' !important

#global-header
  .column.wide
    padding-bottom 0.5rem !important

@media only screen and (max-width: $desktop-breakpoint) 
  #global-header
    .column
      padding 1rem 0.25rem !important

#logo
  padding 1rem 0.5rem 0

@media only screen and (min-width: $desktop-breakpoint) 
  #logo
    padding 2rem
    
#menu
  background none transparent
  border none
  box-shadow none
  padding-right 1rem !important
  a
    letter-spacing .35rem
    line-height 3rem
    margin 2rem 1rem
    padding 0rem 1rem
    text-transform uppercase

#mobile_menu_toggle
  color #333333
  font-size 2rem
  position absolute
  right 0.5rem
  top 1.9rem
  cursor pointer

.ui.divider
  margin 2rem 0 !important

@media only screen and (min-width: $desktop-breakpoint) 
  #mobile_menu_toggle
    display none
  #menu
    display flex !important

@media only screen and (max-width: $desktop-breakpoint) 
  #logo
    padding-right 4rem
  #menu
    display none

footer
  max-width $desktop-breakpoint
  margin 0 auto
  padding-bottom 5rem
  h3
    font-weight bold
    line-height 3rem
  h5
      float right
  img
    display inline-block !important
    margin-right 2rem
    &.logo
      margin .5rem 0 0
  span
    display inline-block
    color #000000
    line-height 2.5rem

@media only screen and (max-width: $desktop-breakpoint) 
  footer
    margin 0 auto
    padding 0 2rem
    &, *
      text-align center
    a
      width 100%
    span
      margin 0 auto
    img
      float left
