/*
  Services
*/

#services
  margin 0 auto
  h3
    font-size 1.6rem
    line-height 3.2rem
  .hello
    font-size 2.5rem
    line-height 3.5rem
  #service_list
    .column
      height 330px
      margin 1rem 1.75rem 1rem 0
      width calc(33% - 1.75rem)
      position relative
      overflow hidden
      padding: 1rem 0rem !important
      &.empty
        display none
      h3
        font-size 1.2rem
        line-height 1.8rem
      img
        height 330px
        min-width 475px
        object-fit cover
        object-position center
      .caption
        display block
        height 150px
        width 100%
        position absolute
        bottom 0
        padding 1.5rem
        background rgba(0,0,0,0.85)
        color #FFFFFF
  #methodology
    > p
        margin 2rem 0 3rem
        text-align left
        line-height 2rem
    .left.aligned
      div 
        margin 0.5rem 0
  #engagement_types
    .column
      background rgba(0,0,0,0.1)
      margin 2rem
  #benefits
    padding-bottom 3rem
    h4
      margin 1.5rem .5rem
      text-align left
      font-size 1.6rem
      font-weight normal
    p
      display block
      margin .5rem
      text-align left
      
@media only screen and (min-width: 1500px)
  #services
    width 80%
    #service_list
      .column
        padding: 1rem 1rem!important;
        &.empty
          display inline-block