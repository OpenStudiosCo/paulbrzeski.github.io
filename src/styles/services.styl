/*
  Services
*/

#services
  margin 0 auto
  width 80%
  .hello
    font-size 2.5em
    line-height 3.5em
  #service_list
    .column
      height 330px
      margin 1em 1.75em 1em 0
      width calc(33% - 1.75em)
      position relative
      overflow hidden
      img
        height 330px
        min-width 475px
        object-fit cover
        object-position center
      .caption
        display block
        height 125px
        width 100%
        position absolute
        bottom 0
        padding 1.5em
        background rgba(0,0,0,0.85)
        color #FFFFFF
  #methodology
    .left.aligned
      div 
        margin 0.5em 0
  #engagement_types
    .column
      background rgba(0,0,0,0.1)
      margin 2em
  #benefits
    h4
      margin 1.5rem .5rem
      text-align left
      font-size 1.6em
      font-weight normal
    p
      display block
      margin .5rem
      text-align left