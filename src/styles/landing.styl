/*
  Landing Page
*/
header
  position relative
  text-align center
  img
    margin-bottom 2em
  h2
    color #FFFFFF
    font-size 36px
    font-weight 300
    position absolute
    top calc(165px - 1em)
    left 0
    letter-spacing .2em
    right 0
    margin-left auto
    margin-right auto
    text-transform uppercase
    text-shadow 2px 2px rgba(0, 0, 0, 0.5)

@media only screen and (max-width: 1000px) 
  header
    h2
      font-size 24px
      top calc(125px - 1em)
    img
      object-position 0 0 !important