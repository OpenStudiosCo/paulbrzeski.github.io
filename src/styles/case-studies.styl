/*
  Case Studies
*/

#case_studies
  margin 6rem auto
  width 95%
  .item
    min-height 350px
    &:not(:first-child)
      padding-top 6rem
    h3
      font-size 2.4rem
      font-weight 300
      margin 0 0 1rem 0
      letter-spacing .01rem
      color #000000
    p
      line-height 2rem
      
@media only screen and (min-width: 1500px)
  #case_studies
    width 80%