{{>site-header}}
<div class="page-menu">
	<ul>
		{{#withSort main_menu 'data.menu_index'}}
			{{#each this.pages }}
				<li><a href="/{{ replaceStr this.dest 'dist' '' }}">{{ this.data.title }}</a></li>
			{{/each}}
		{{/withSort}}
	</ul>
</div>
<div class="page-content">
	<h2>{{ this.page.title }}</h2>
	{{#markdown}} 
	  {{> body}} 
	{{/markdown}}
</div>
{{>site-footer}}